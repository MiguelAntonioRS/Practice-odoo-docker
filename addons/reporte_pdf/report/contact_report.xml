<odoo>
    <template id="contact_pdf_template" inherit_id="web.external_layout">
        <xpath expr="//div[@class='page']" position="inside">
            <h2>Contact Details</h2>
            <p>Name: <t t-esc="doc.name"/></p>
            <p>Type: <t t-esc="doc.contact_type"/></p>
            <p>Address: <t t-esc="doc.address"/></p>
            <p>Phone: <t t-esc="doc.phone"/></p>
            <p>Tax ID: <t t-esc="doc.tax_id"/></p>
        </xpath>
    </template>
</odoo>
