<odoo>
    <record id="view_contact_form" model="ir.ui.view">
        <field name="name">contact.record.form</field>
        <field name="model">contact.record</field>
        <field name="arch" type="xml">
            <form string="Contact">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="contact_type"/>
                        <field name="address"/>
                        <field name="phone"/>
                        <field name="tax_id"/>
                    </group>
                    <footer>
                        <button name="generate_pdf" type="object" string="Export to PDF" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_contact_root" name="Contacts" sequence="10"/>
    <menuitem id="menu_contact_records" name="Contact Records" parent="menu_contact_root" action="action_contact_records"/>
    
    <record id="action_contact_records" model="ir.actions.act_window">
        <field name="name">Contact Records</field>
        <field name="res_model">contact.record</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
