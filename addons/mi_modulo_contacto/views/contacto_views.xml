<odoo>
    <record id="view_contact_form_pdf" model="ir.ui.view">
        <field name="name">res.partner.form.pdf</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_pdf" type="object" string="Generar PDF" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="street"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
